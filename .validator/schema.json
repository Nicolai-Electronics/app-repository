    },
    "application": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "targets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "type": {
            "type": "string"
          },
          "executable": {
            "type": "string"
          },
          "assets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "name",
    "description",
    "categories",
    "version",
    "icon",
    "author",
    "license",
    "application"
  ],
  "additionalProperties": false
