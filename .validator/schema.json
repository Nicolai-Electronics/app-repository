{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the application",
      "maxLength": 128,
      "minLength": 3,
      "pattern": "^[A-Za-z0-9_\\- .!@#$%^&*()\\/\\\\]+$"
    },
    "description": {xxx
      "type": "string",
      "description": "A short description of the app",
      "maxLength": 256,
      "minLength": 0,
      "pattern": "^[A-Za-z0-9_\\- .!@#$%^&*()\\/\\\\]+$"
    },
    "categories": {},
    "version": {
      "type": "integer",
      "description": "Latest published package version",
      "minimum": 1
    },
    "icon": {
      "type": "object",
      "properties": {
        "16x16": {
          "type": "string"
        },
        "32x32": {
          "type": "string"
        },
        "64x64": {
          "type": "string"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "author": {
      "description": "Author of the app",
      "type": "string"
    },
    "license": {
      "description": "License of the app as SPDX license identifier",
